    }

    /* Paragraphs */
    p { margin-bottom: 1em; line-height: 1.7; }
    ol, ul { margin-bottom: 1em; padding-left: 2em; }
    li { margin-bottom: 0.5em; }
    strong { font-weight: 700; }

    /* Spanish/Portuguese pages grid (.contenedor/.columna) */
    .contenedor {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      padding: 20px 0;
    }
    .columna {
      position: relative;
      text-align: center;
    }
    .columna a {
      display: block;
      position: relative;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .columna a:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
    .imagen-redondeada {
      display: block;
      width: 100%;
      height: auto;
      border-radius: 10px;
      aspect-ratio: 16 / 9;
      object-fit: cover;
    }
    .texto-imagen {
      background: rgba(0,0,0,0.75);
      padding: 10px 8px;
      margin: 0;
      text-align: center;
      font-size: 13px;
      color: #ffffff;
      font-weight: 500;
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
